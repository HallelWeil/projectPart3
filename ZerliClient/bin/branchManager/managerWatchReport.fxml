                  <Font name="System Bold Italic" size="11.0" />
               </font>
               <graphic>
                  <ImageView>
                     <image>
                        <Image url="@../icons/get.png" />
                     </image>
                  </ImageView>
               </graphic>
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor>
            </Button>
            <Button fx:id="managerOpenReport" contentDisplay="TOP" layoutX="34.0" layoutY="416.0" mnemonicParsing="false" onAction="#openReport" prefHeight="50.0" prefWidth="150.0" style="-fx-background-color: #2f41a7;" text="Open report" textFill="WHITE">
               <font>
                  <Font name="System Bold Italic" size="11.0" />
               </font>
               <graphic>
                  <ImageView disable="true">
                     <image>
                        <Image url="@../icons/openDocument.png" />
                     </image>
                  </ImageView>
               </graphic>
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor>
            </Button>
         </children>
      </AnchorPane>
      <AnchorPane fx:id="ceoReportScreen" layoutX="201.0" prefHeight="681.0" prefWidth="974.0" />
   </children>
