<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="ceoWatchReportPane" prefHeight="695.0" prefWidth="1200.0" style="-fx-background-color: white; -fx-border-color: black;" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="CEOcontroller">
   <children>
      <AnchorPane prefHeight="695.0" prefWidth="275.0" style="-fx-border-color: black;">
         <children>
            <Label layoutX="14.0" layoutY="14.0" text="choose report date">
               <font>
                  <Font name="System Bold Italic" size="18.0" />
               </font>
            </Label>
            <Label layoutX="14.0" layoutY="130.0" text="choose report type">
               <font>
                  <Font name="System Bold Italic" size="18.0" />
               </font>
            </Label>
            <ComboBox fx:id="ceoReportYear" layoutX="26.0" layoutY="41.0" prefWidth="150.0" promptText="year" />
            <ComboBox fx:id="ceoReportMonth" layoutX="26.0" layoutY="84.0" prefWidth="150.0" promptText="month" />
            <ComboBox fx:id="ceoReportType" layoutX="26.0" layoutY="167.0" prefWidth="150.0" promptText="report type" />
            <ComboBox fx:id="ceoReportPeriod" layoutX="26.0" layoutY="208.0" prefWidth="150.0" promptText="report period" />
            <Button fx:id="ceoOpenReport" disable="true" layoutX="29.0" layoutY="500.0" mnemonicParsing="false" onAction="#OpenReport" prefHeight="35.0" prefWidth="160.0" text="Open report">
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor>
            </Button>
            <Button fx:id="ceoSaveReport" disable="true" layoutX="29.0" layoutY="550.0" mnemonicParsing="false" onAction="#SaveReport" prefHeight="35.0" prefWidth="160.0" text="Save report">
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor>
            </Button>
            <Button fx:id="ceoPreviewReportRight" disable="true" layoutX="29.0" layoutY="400.0" mnemonicParsing="false" onAction="#PreviewReportRight" prefHeight="35.0" prefWidth="160.0" text="Preview report on right">
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor>
            </Button>
            <Label fx:id="reportMessage" layoutX="30.0" layoutY="624.0" prefHeight="17.0" prefWidth="91.0" textFill="RED" />
            <Label layoutX="15.0" layoutY="251.0" text="choose branch">
               <font>
                  <Font name="System Bold Italic" size="18.0" />
               </font>
            </Label>
            <ComboBox fx:id="ceoReportBranch" layoutX="26.0" layoutY="294.0" prefWidth="150.0" promptText="branch" />
            <Button fx:id="ceoPreviewReportLeft" disable="true" layoutX="29.0" layoutY="450.0" mnemonicParsing="false" onAction="#PreviewReportLeft" prefHeight="35.0" prefWidth="160.0" text="Preview report on left">
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor>
            </Button>
            <Button fx:id="ceoGetReport" contentDisplay="TOP" layoutX="62.0" layoutY="337.0" mnemonicParsing="false" onAction="#getReport" prefHeight="63.0" prefWidth="78.0" style="-fx-background-color: #2f41a7;" text="Get report" textFill="WHITE">
               <font>
                  <Font name="System Bold Italic" size="11.0" />
               </font>
               <graphic>
                  <ImageView>
                     <image>
                        <Image url="@../icons/get.png" />
                     </image>
                  </ImageView>
               </graphic>
            </Button>
         </children>
      </AnchorPane>
      <AnchorPane fx:id="ceoReportScreen" layoutX="274.0" prefHeight="681.0" prefWidth="926.0">
         <children>
            <SplitPane dividerPositions="0.5" layoutY="-1.0" prefHeight="695.0" prefWidth="999.0">
              <items>
                <AnchorPane fx:id="leftReport" minHeight="0.0" minWidth="0.0" prefHeight="398.0" prefWidth="354.0" />
                <AnchorPane fx:id="rightReport" minHeight="0.0" minWidth="0.0" prefHeight="387.0" prefWidth="403.0" />
              </items>
            </SplitPane>
         </children>
      </AnchorPane>
   </children>
</AnchorPane>
